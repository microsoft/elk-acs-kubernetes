{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "required": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Whether to deploy Azure container registry"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location of all components"
            }
        }
    },
    "variables": {
        "registryName": "[concat(uniquestring(resourceGroup().id), 'registry')]",
        "registryDisk": "[concat(uniquestring(resourceGroup().id), 'elkimage')]"
    },
    "resources": [
        {
            "apiVersion": "2017-06-01",
            "condition": "[parameters('required')]",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('registryDisk')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage",
            "properties": {}
        },
        {
            "apiVersion": "2017-03-01",
            "condition": "[parameters('required')]",
            "name": "[variables('registryName')]",
            "type": "Microsoft.ContainerRegistry/registries",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[variables('registryDisk')]"
            ],
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "adminUserEnabled": true,
                "storageAccount": {
                    "name": "[variables('registryDisk')]",
                    "accessKey": "[listKeys(variables('registryDisk'),'2017-06-01').keys[0].value]"
                }
            }
        }
    ],
    "outputs": {}
}